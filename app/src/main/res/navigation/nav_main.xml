<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.project.navigation.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/firstHomeScreen"
        android:name="com.project.navigation.FirstHomeScreen"
        android:label="FirstHomeScreen" >
        <action
            android:id="@+id/action_firstHomeScreen_to_twoDepthScreen"
            app:destination="@id/twoDepthScreen" />
    </fragment>
    <fragment
        android:id="@+id/secondHomeScreen"
        android:name="com.project.navigation.SecondHomeScreen"
        android:label="SecondHomeScreen" />
    <fragment
        android:id="@+id/thirdHomeScreen"
        android:name="com.project.navigation.ThirdHomeScreen"
        android:label="ThirdHomeScreen" />
    <fragment
        android:id="@+id/twoDepthScreen"
        android:name="com.project.navigation.TwoDepthScreen"
        android:label="TwoDepthScreen" >
        <argument
            android:name="param_count"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment><action android:id="@+id/action_global_twoDepthScreen" app:destination="@id/twoDepthScreen"/>
</navigation>